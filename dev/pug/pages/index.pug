extends ../layout/main

block title
	| Breeze

block content
	header.header
		.header-top
			.container
				.header-top__inner
					.phone
						img(src="static/img/tel.png" alt="icon").phone__icon
						a(href="tel:7771001234").phone__link 
							span Call Us 
							| +777 (100) 1234
					.greeting
						| Welcome visitor you can 
						br.mobile-br
						span.greeting__link.greeting__link--login login
						|  or 
						span.greeting__link.greeting__link--signup create an account.
					.user-settings
						.languages
							.languages__mobile
							ul.languages__list
								li.languages__item.languages__item--active EN
								li.languages__item FR
								li.languages__item GM
						.currency
							.currency__mobile
							ul.currency__list
								li.currency__item.currency__item--active $
								li.currency__item €
								li.currency__item £
		.header-middle
			.container
				.header-middle__inner
					a(href="#").logo
						img(src="static/img/logo.jpg" alt="breeze").logo__img
						span.logo__text Online Store Theme
					.search
						.search__inner
							input(placeholder="Search entire store here...").input-field
							img(src="static/img/search.png" alt="").search__icon
					.user-menu
						//- без ссылок т.к. это будут попапы
						.user-menu__list
							.user-menu__item My Account
							.user-menu__item My Wishlist
							.user-menu__item
								.user-menu__link.user-menu__link--login Log in
								include ../modules/login
							.user-menu__item
								.user-menu__link.user-menu__link--signup Sign up
								include ../modules/signup
						.cart
							img(src="static/img/cart.png" alt="").cart__img
							span.cart__title Cart 
							span.cart__currency $
							span.cart__amount 0.00
		.header-bottom.main-menu
			.container
				ul.main-menu__list
					li.main-menu__item
						a.main-menu__link(href="") HOME
					li.main-menu__item
						a.main-menu__link(href="") SOLIDS
					li.main-menu__item
						a.main-menu__link(href="") LIQUIDS
					li.main-menu__item
						a.main-menu__link(href="") SPRAY
					li.main-menu__item
						a.main-menu__link(href="") ELECTRIC
					li.main-menu__item
						a.main-menu__link(href="") FOR CARS
