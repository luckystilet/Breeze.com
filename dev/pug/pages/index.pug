							.slider__item-inner
								img(src="static/img/slider_product.png").slider__product
								.slider__descr
									span.slider__title Breeze Noticeables
									span.slider__text The new series of natural air fresheners.
									span.slider__text Febreze Noticeables Meadows & Rain
									span.slider__text Air Freshener Refill.
			.product-advantages
				.product-advantages__item
					img(src="static/img/product-advantages__sale.png").product-advantages__img
					.product-advantages__title Best price 
					.product-advantages__text this week
